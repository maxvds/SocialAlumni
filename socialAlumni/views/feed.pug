doctype html
html
  head
    title= title
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous")
    //-link(rel='stylesheet', href='/stylesheets/style.css')
    link(href="/stylesheets/feed.css" rel="stylesheet")
    script(defer, src='/javascripts/preview_image.js')
    header(class="p-3 text-bg-dark d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom")
      div(class="container" style="top: 0")
        include nav 

  body(class = "text-center")
      main(class="form-signin w-100 m-auto text-center")
        form(action='/home/' + group +'/feed', method = 'post', id="post-form" class="row row-cols-lg-auto g-3 align-items-center d-flex justify-content-center mb-4")
          textarea(id="content" type="text" class="form-control" autocomplete="off" placeholder="Share to the timeline here!" rows="3" name="content")
          button(id="post-button" type="submit" class="btn btn-outline-primary") Post

        each post in posts
          include templates/post_template.pug