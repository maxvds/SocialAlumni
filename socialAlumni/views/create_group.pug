doctype html
html
  head
    title= title
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous")
    //-link(rel='stylesheet', href='/stylesheets/style.css')
    link(href="/stylesheets/create.css" rel="stylesheet")
    script(defer, src='/javascripts/preview_image.js')
    header(class="p-3 text-bg-dark d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom")
      div(class="container" style="top: 0")
        include nav 
      
  body(class = "text-center")
    main(class="form-signin w-100 m-auto text-center")
      p #{errors}
        div 
           form(action='/home/create-group', method='post')
              fieldset
                legend Group Information
                   label(for="group_name") Name 
                      input(type="text", id="group_name", name='group_name')
                      br
                      label(for="group_description") Description
                      input(type="text", id="group_description", name='group_description')
                      br
                      button(type='submit' class="w-100 btn btn-lg btn-primary" style="margin-top: 20px") Create Group  