doctype html
html
  head
    title= title
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous")
    link(href="/stylesheets/chat.css" rel="stylesheet")
    script(defer, src='/javascripts/preview_image.js')
    header(class="p-3 text-bg-dark d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom")
      div(class="container" style="top: 0")
        include nav 

    div(class="container-fluid")
        div(class="row")
            nav(id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-body-tertiary sidebar collapse")
                    a(href="/" class="d-flex align-items-center flex-shrink-0 p-3 link-body-emphasis text-decoration-none border-bottom")
                        svg(class="bi pe-none me-2" width="30" height="24")
                        span(class="fs-5 fw-semibold") Messages
       
            body(class = "text-center")
                main(class="col-md-9 ms-sm-auto col-lg-10 px-md2 text-center" style="height: calc(100vh - 90px); overflow: hidden;")
                    div(class="my-4 overflow-scroll" id="myChart" style="display: block; height: calc(100% - 90px); box-sizing: border-box;")
                        form(action='/home/search' method='get' style="vertical-align: middle")
                            h3 Search a User to Message
                            br
                            div(class="form-floating"  style="width: 50%; margin: auto;")
                                input(type="search" name="search", class="form-control" id="search" placeholder="Search")        
                                label(for="Search") Search
                                button(type='submit' class="w-100 btn btn-lg btn-primary") Search
