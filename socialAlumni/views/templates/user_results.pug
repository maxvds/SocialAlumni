doctype html
html
  head
    title= title
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous")
    script(defer, src='/javascripts/preview_image.js')

body(class="text-center")
section
    div(class="form-control")
        img(src=`/images/${user.profile_photo}`, alt="Profile pictures" height="100" width="100")
        div(class="card-title")
            p(lang="mi") #{user.first_name} #{user.last_name}
                span(style="margin-left: 5px;" class=`badge ${user.level} rounded-pill` ) #{user.level}
                div(class="card-content")
                    p(class="card-title") 
                        span=user.email
                    a(href='/home/' + user.email + '/all-messages')
                        button(class="btn btn-dark" style="margin-top: 5px") Message User
        